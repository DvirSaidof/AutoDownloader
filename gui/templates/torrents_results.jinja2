{% extends 'base.jinja2' %}

{% block content %}
<h1>The results</h1>
    <div class="col-md-5 col-sm-12">
        <table border="1" id="html5logo" class="table table-striped">
            <tbody>
                <form method="POST">
                    <tr>
                        <th>Type</th>
                        <th>Name of Torrent</th>
                        <th>Size of Torrent</th>
                        <th>Number of seeds</th>
                    </tr>
                    {% for torrent in torrents: %}
                    <tr>
                        <td>
                            {{ torrent.type }}
                        </td>
                        <td>
                            {{ torrent.torrent_name }}
                        </td>
                        <td>
                            {{ torrent.size }}
                        </td>
                        <td>
                            {{ torrent.seeds }}
                        </td>
                        <td>
                            <button type="submit" name="submit_button" value={{loop.index}}>Download</button>
                        </td>
                    </tr>
                    {% endfor %}
                </form>
            </tbody>
        </table>
    </div>
{% endblock %}